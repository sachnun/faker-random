{
	"name": "Bun & Wrangler",
	"image": "mcr.microsoft.com/devcontainers/base:jammy",
	"features": {
		"ghcr.io/prulloac/devcontainer-features/bun": {},
		"ghcr.io/devcontainers-extra/features/cloudflare-wrangler": {}
	},
	"forwardPorts": [8787],
	"portsAttributes": {
		"8787": {
			"label": "Application",
			"onAutoForward": "openBrowserOnce"
		}
	},
	"postCreateCommand": "bun i",
	"postAttachCommand": "bun dev",
	"customizations": {
		"vscode": {
			"extensions": [
				"oven.bun-vscode",
				"tamasfe.even-better-toml"
			]
		}
	}
}